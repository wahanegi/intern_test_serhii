<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="wrapper">

    <div class="logo mb-3">
      <%= image_tag('icons8-twitter-96.png').html_safe %>
    </div>
    <h6 class="text-center mb-3 mt-p">Forgot your password?</h6>
    <form class="p-3 mt-3">
      <div class="form-field align-items-center">
        <p><%= f.label :email, class: "fs-6 mt-3" %></p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <button type="submit" class="btn mt-3">Send me instructions</button>
    </form>

    <div class="text-center fs-6">
      <a href="<%= new_user_session_path %>">Log in</a> or <a href=" <%= new_registration_path(resource_name) %>">Sign up</a>
    </div>
  </div>
<% end %>
