<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="wrapper">
    <div class="logo">
      <%= image_tag('icons8-twitter-96.png').html_safe %>
    </div>

    <form class="p-3 mt-3">
      <div class="form-field align-items-center">
        <p><%= f.label :email, class: "fs-6" %></p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-field align-items-center">
        <p><%= f.label :password, class: "fs-6" %></p>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="form-field align-items-center">
        <p><%= f.label :password_confirmation, class: "fs-6" %></p>
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <button type="submit" class="btn mt-3">Sign up</button>
    </form>

    <div class="text-center fs-6">
      <a href="<%= new_user_session_path %>">Already have an account?</a>
    </div>
  </div>
<% end %>
